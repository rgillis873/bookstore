                    input#inputAddressS.form-control(type='text' placeholder='1234 Main St' required)
                .form-group
                    label(for='inputAddress2S') Address 2
                    input#inputAddress2S.form-control(type='text' placeholder='Apartment, studio, or floor' required)
                .form-row
                    .form-group.col-md-6
                        label(for='inputCityS') City
                        input#inputCityS.form-control(type='text' required)
                    .form-group.col-md-4
                        label(for='inputProvinceS') Province
                        input#inputStateS.form-control(type='text' required)
                    .form-group.col-md-2
