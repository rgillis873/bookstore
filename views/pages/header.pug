link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
	a.navbar-brand(href='#') Look Inna Book
	ul.navbar-nav.mr-auto.mt-2.mt-lg-0
		li.nav-item.active
			a.nav-link(href='/')
				| Home 
				span.sr-only (current)
		li.nav-item
			a.nav-link(href='/books') Books
		li.nav-item
			a.nav-link(href='/register') Register
		li.nav-item
			a.nav-link(href='/cart') View Cart
		li.nav-item
			a.nav-link(href='/checkout') Checkout
		if userName
			p.text-secondary Logged in as: #{userName}
			br
			br
			if userName == "admin"
				li.nav-item
					a.nav-link(href='/sales') Sales
				li.nav-item
					a.nav-link(href='/storeorders') Store Orders	
		else
			form.form-inline.my-2.my-lg-0(action="/signin" method="post")
				label(for='user_name' style="color:white")
					b Username
				input.form-control.mr-sm-2(type="text" name="user_name" required)
				|
				label(for='pass_word' style="color:white")
					b Password
				input.form-control.mr-sm-2(type="password" name="pass_word" required)
				button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Sign In